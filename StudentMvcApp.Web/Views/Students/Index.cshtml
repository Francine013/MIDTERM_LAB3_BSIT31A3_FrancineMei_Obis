@model IEnumerable<StudentMvcApp.Entities.DTOs.StudentDto>

@{
    ViewData["Title"] = "Students";
}
<div class="container mt-4">
    <div class="card rounded-3">
        <div class="card-header">
            <h3 class="mb-0">Student List</h3>
        </div>
        <div class="card-body">
            <table class="table table-bordered text-center">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Age</th>
                        <th>Course</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var s in Model)
                        {
                            <tr>
                                <td>@s.Name</td>
                                <td>@s.Age</td>
                                <td>@s.Course</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="3" class="text-muted">No students found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<style>
    body {
        background-color: #f4f1ea; 
    }

    .card {
        background-color: #fffaf3;
        border: 1px solid #c9b79c;
        box-shadow: 0 4px 6px rgba(120, 98, 65, 0.2);
    }

    .card-header {
        background: linear-gradient(135deg, #b08968, #7f5539);
        color: #fdf6ec;
        font-family: 'Georgia', serif;
        font-size: 1.3rem;
        letter-spacing: 1px;
    }

    table {
        border: 1px solid #d6c4a0;
    }

    thead {
        background-color: #e6d5b8;
        color: #3b2f2f;
        font-weight: bold;
    }

    tbody tr {
        border-bottom: 1px solid #e0d2b4;
    }

        tbody tr:nth-child(even) {
            background-color: #f9f5e7;
        }

        tbody tr:hover {
            background-color: #ede2cf;
            transition: 0.2s;
        }

    td, th {
        padding: 12px;
    }

    .text-muted {
        font-style: italic;
    }
</style>